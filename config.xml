<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.wjfw.wjfwmobile"
        versionCode="10002" 
        version   = "1.0.2">

    <!-- versionCode is optional and Android only -->

    <name>WJFW TV-12</name>

    <description>
        WJFW News Watch 12: News From Where You Live, On The Go!
		Local news, weather and more from wherever you are. Keep up to date with what's going on in the Northwoods, and be ready for whatever Mother Nature brings with our 7 day forecast, weather highlights and radar.
    </description>

    <author href="http://www.byrequestwebdesigns.com" email="zach@brwdmail.com">
        Zach Hext - By Request Web Designs
    </author>

	<icon src="Icon.png" />
	
	<!-- iPhone / iPod Touch  -->
	<icon src="ico/Icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="ico/Icon-60@2x.png" gap:platform="ios" width="120" height="120" />

	<!-- iPad -->
	<icon src="ico/Icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="ico/Icon-76@2x.png" gap:platform="ios" width="152" height="152" />

	<!-- iPhone Spotlight and Settings Icon -->
	<icon src="ico/Icon-Small.png" gap:platform="ios" width="29" height="29" />
	<icon src="ico/Icon-Small@2x.png" gap:platform="ios" width="58" height="58" />

	<!-- Spotlight Icon -->
	<icon src="ico/Icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="ico/Icon-40@2x.png" gap:platform="ios" width="80" height="80" />

	<!-- iPhone / iPod Touch -->
	<icon src="ico/Icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="ico/Icon@2x.png" gap:platform="ios" width="114" height="114" />

	<!-- iPad -->
	<icon src="ico/Icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="ico/Icon-72@2x.png" gap:platform="ios" width="144" height="144" />

	<!-- iPad Spotlight and Settings Icon -->
	<icon src="ico/Icon-50.png" gap:platform="ios" width="50" height="50" />
	<icon src="ico/Icon-50@2x.png" gap:platform="ios" width="100" height="100" />

	<icon src="ico/ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="ico/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="ico/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="ico/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	<icon src="ico/xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />
	
	
	<gap:splash src="splash.png" />
	
	<!-- iPhone and iPod touch -->
	<gap:splash src="splash/iphone/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash/iphone/Default@2x.png" gap:platform="ios" width="640" height="960" />
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="splash/iphone/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />
	<!-- iPad -->
	<gap:splash src="splash/iphone/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
	<!-- Retina iPad -->
	<gap:splash src="splash/iphone/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />

	<gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	<gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<gap:splash src="splash/android/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	<gap:splash src="splash/android/portrait-xxhdpi.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
	
		<!--Allow Plugins-->
	<gap:plugin name="org.apache.cordova.device" version="0.2.8" />
	<gap:plugin name="org.apache.cordova.network-information" version="0.2.7" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.7" />
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	
	<feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
	
	
	<!-- Preference Options-->
	<preference name="phonegap-version" value="3.5.0" /> 
	<preference name="fullscreen" value="true" />
	<!--iOS-->
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
		<true/>
	</gap:config-file>
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
		<false/>
	</gap:config-file>
	<preference name="target-device" value="universal" /> 
	<preference name="prerendered-icon" value="true" />
	<preference name="detect-data-types" value="false" />
	<preference name="exit-on-suspend" value="false" />
	<!--Android-->
	<preference name="android-minSdkVersion" value="10" />
	<preference name="android-installLocation" value="internalOnly" />
	<preference name="splash-screen-duration" value="3000"/>

	
	<!--WhiteList Access Commands-->
	
	<access origin="http://www.wjfw.com" />
	<access origin="http://cloud.wjfw.com" />
	<access origin="http://cdn.bimvid.com" />
	<access origin="http://cdn.bimfs.com" />
	
</widget>
